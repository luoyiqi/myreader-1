<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tool22"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip"
    android:background="@drawable/reader_tool_light" >

    <!--
         <ImageButton
        android:id="@+id/imageBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dip"
        android:layout_marginTop="30dip"
        android:background="@android:color/transparent"
        android:contentDescription="@string/app_name"
        android:src="@drawable/reader_switch_off" >
    </ImageButton>
    -->

    <ToggleButton
        android:id="@+id/use_system_light_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dip"
        android:layout_marginTop="30dip"
        android:background="@drawable/toggle_button"
        android:text="ToggleButton"
                android:textOff=""  
                        android:textOn=""
         />

    <SeekBar
        android:id="@+id/tool_progress_light"
        style="@android:attr/progressBarStyleHorizontal"
        android:layout_width="170.0dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/use_system_light_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:focusable="false"
        android:max="255"
        android:maxHeight="20.0dip"
        android:minHeight="20.0dip"
        android:paddingLeft="9.0dip"
        android:paddingRight="9.0dip"
        android:progressDrawable="@drawable/playback_seekbar_style"
        android:thumb="@drawable/playback_seekbar_thumb"
        android:thumbOffset="5.0dip" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/use_system_light_button"
        android:layout_marginLeft="21dp"
        android:text="采用系统亮度"
        android:textColor="@color/TextViewColor"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/tool_progress_light"
        android:layout_marginTop="23dp"
        android:src="@drawable/back_left" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton1"
        android:layout_below="@+id/imageButton1"
        android:layout_marginTop="23dp"
        android:text="夜晚模式"
        android:textColor="@color/TextViewColor"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/ImageButton01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView1"
        android:layout_alignTop="@+id/imageButton1"
        android:src="@drawable/back_left" />

    <ImageButton
        android:id="@+id/ImageButton02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_toRightOf="@+id/ImageButton01"
        android:src="@drawable/back_left" />

    <ImageButton
        android:id="@+id/ImageButton03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ImageButton02"
        android:layout_toRightOf="@+id/ImageButton02"
        android:src="@drawable/back_left" />

<!--     <ImageButton
        android:id="@+id/ImageButton04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageBtn2"
        android:layout_alignTop="@+id/textView2"
        android:background="@android:color/transparent"
        android:contentDescription="@string/app_name"
        android:src="@drawable/reader_switch_off" /> -->

    <ToggleButton
        android:id="@+id/neight_mode_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/use_system_light_button"
        android:layout_alignTop="@+id/textView2"
        android:background="@drawable/toggle_button" 
        android:textOff=""  
                        android:textOn=""
        />

   <ImageView
       android:id="@+id/imageView1"
       android:layout_width="16dp"
       android:layout_height="16dp"
       android:layout_alignBottom="@+id/imageView2"
       android:layout_alignLeft="@+id/textView1"
       android:layout_marginBottom="4dp"
       android:layout_marginLeft="10dp"
       android:src="@drawable/brightness_dark" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignRight="@+id/ImageButton03"
        android:layout_alignTop="@+id/tool_progress_light"
        android:layout_marginRight="10dp"
        android:src="@drawable/brightness_light" />

</RelativeLayout>