<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_full"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bookshelf_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:divider="#FFFFFF"
        android:dividerHeight="1px"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/filechooser_goback"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_alignParentLeft="true"
            android:paddingLeft="10dp"
            android:src="@drawable/filechooser_goback" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="left"
            android:layout_marginLeft="4dip"
            android:layout_marginTop="10dip"
            android:layout_weight="4"
            android:text="文件扫描"
            android:textSize="20dp" 
            android:textColor="@color/TextViewColor"
            />

        <ImageView
            android:id="@+id/imgStopScan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:src="@drawable/filechooser_scaner"
            android:text="停止" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:divider="#FFFFFF"
        android:dividerHeight="1px"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvPath"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dip"
            android:layout_weight="4"
            android:gravity="left"
            android:textColor="@color/TextViewColor"
            android:textSize="16sp" 
            android:layout_marginLeft="20dp"
            android:singleLine="true"
		    android:ellipsize="middle"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        android:background="#E8E8D0"
        android:divider="#5B5B5B"
        android:dividerHeight="1px"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/bookview"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:clickable="true"
            android:columnWidth="90dp"
            android:divider="#FFFFFF"
            android:dividerHeight="1px"
            android:horizontalSpacing="10dp"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp" 
            android:textColor="@color/TextViewColor"
            />

        <TextView
            android:id="@+id/tvEmptyHint"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="#5B5B5B"
            android:dividerHeight="1px"
            android:gravity="center"
            android:text="@string/empty_hint"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/operateLinear"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#5B5B5B"
        android:dividerHeight="1px"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btExit"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="返回书架" />

        <Button
            android:id="@+id/btAddBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:text="添加到书架" />
    </LinearLayout>

</LinearLayout>